<!-- Define a function to render each inventory -->
<% function renderInventory(inventory) { %>
<div class="item-preview">
  <a href="/single-inventory/<%= inventory._id %>">
    <h2>Name: <%= inventory.name %></h2>
    <h4>Description: <%= inventory.description %></h4>
  </a>
</div>
<% } %>

<!DOCTYPE html>
<html lang="en">
  <!-- Pass a JavaScript variable to a partial in EJS -->
  <%- include('partials/head.ejs', { title: "Home page" }) %>

  <body>
    <%- include('partials/navbar.ejs') %>
    <%- include('partials/hero.ejs') %>
    <div class="content">
      <div class="home">
        <div class="item-list">
          <% if (inventorys.length > 0) { %>
          <!-- Call the renderInventory function for each inventory -->
          <% inventorys.forEach(renderInventory); %> <% } else { %>
          <p>No inventorys found.</p>
          <% } %>
        </div>
      </div>
    </div>
    <%- include('partials/ads.ejs') %>
    <%- include('partials/footer.ejs') %>
  </body>
</html>
