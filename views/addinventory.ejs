<!-- addinventory.ejs -->
<!DOCTYPE html>
<html lang="en">
  <!-- Pass a JavaScript variable to a partial in EJS -->
  <%- include('partials/head.ejs', { title: "Add Inventory" }) %>

  <body>
    <%- include('partials/navbar') %>

    <div class="content">
      <div class="create">
        <h2>Add a New Inventory</h2>
        <form action="/addInventory" method="POST">
          <label for="name">Name:</label
          ><input type="text" value="" id="name" name="name" required />

          <label for="description">Description:</label>
          <textarea
            value=""
            id="description"
            name="description"
            rows="4"
            required
          ></textarea
          ><br />

          <label for="quantity">Quantity:</label>
          <input type="number" id="quantity" name="quantity" required /><br />

          <label for="price">Price:</label>
          <input type="number" id="price" name="price" required /><br />

          <button type="submit">Add Inventory</button>
        </form>
      </div>
    </div>

    <%- include('partials/footer') %>
  </body>
</html>
